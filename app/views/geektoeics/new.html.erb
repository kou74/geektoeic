<%= stylesheet_link_tag 'new', :media => "all" %>

<div class="post-container">
    <p class="title">投稿フォーム</p>
    <%= form_for(@geektoeic, :url => { controller:'geektoeics', action:'create'})do |f| %>
    <%= f.label :投稿内容 %>
        <br>
        <%= f.text_field :comment,size: 140%>
        <br>
    <%= f.label :写真 %> 
    <br>
    <%= f.file_field :picture %>
    <br>


    <%= f.submit "送信"%>
    <br>
    <% end %>


<%= link_to "一覧に戻る", geektoeics_path %>
</div>